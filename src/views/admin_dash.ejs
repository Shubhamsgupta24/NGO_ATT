<header>
    <div class="navbar">
        <div class="nav-search">
            <div class="search-icon" style="color: white;">
                <span class="material-symbols-outlined">Search</span>
            </div>
            <input class="search-input" style="color: white;" placeholder="Search">
        </div>
        <div style="color: white; height: 30px; margin-right: 400px;">
            <p>Government of Maharashtra</p>
        </div>
        <div class="logout">
            <i class="fa-solid fa-arrow-right-from-bracket"></i>
        </div>
        <div class="logoutp" style="color: white; margin-right: 150px;padding-top: 2px;"><a>Log Out</a></div>
    </div>
</header>

<div class="container">
    <aside>
        <div class="top">
            <div class="logo">
                <img src="/images/logo.png" alt="logo">
                <h2>School</h2>
            </div>
            <!-- <div class="close" id="close-btn">
                <span class="material-symbols-outlined">close</span>
            </div> -->
        </div>
        <div class="sidebar">
            <a href="#">
                <span class="material-symbols-outlined">grid_view</span>
                <h3>Dashboard</h3>
            </a>
            <a href="#">
                <span class="material-symbols-outlined">school</span>
                <h3>Schools</h3>
            </a>
            <a href="#">
                <span class="material-symbols-outlined">mail</span>
                <h3>Messages</h3>
                <span class="msg-count">18</span>
            </a>
            <a href="#">
                <span class="material-symbols-outlined">group</span>
                <h3>Team</h3>
            </a>
            <a href="#">
                <span class="material-symbols-outlined">settings</span>
                <h3>Settings</h3>
            </a>
            <a href="/user/logout">
                <span class="material-symbols-outlined">logout</span>
                <h3>Log out</h3>
            </a>
        </div>
    </aside>

    <main>
        <h1>Dashboard</h1>
        <div class="date">
            <input type="date">
        </div>
        <div class="insights">
            <div class="school">
                <span class="material-symbols-outlined">school</span>
                <div class="middle">
                    <div class="left">
                        <h3>Total Schools</h3>
                        <h1><%= total_scho %></h1>
                    </div>

                </div>
            </div>
            <div class="school">
                <span class="material-symbols-outlined">school</span>
                <div class="middle">
                    <div class="left">
                        <h3>Total Students</h3>
                        <h1><%= total_stud %></h1>
                    </div>
                </div>
            </div>
            <div class="school">
                <span class="material-symbols-outlined">school</span>
                <div class="middle">
                    <div class="left">
                        <h3>Total Teacher</h3>
                        <h1>100</h1>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>