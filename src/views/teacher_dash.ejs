<script>
    function refreshPage() {
        location.reload();
    }

    function sheet()
    {
        $.ajax({
            url: '/downloadExcel',
            type: 'GET',
            success: function (response) 
            {
                $('main').empty();
                $('main').html(response);
            },
            error: function (error)
            {
                console.log(error);
            }
        });
    }

    function fillAttendance() {
        $.ajax({
            url: '/teacher/fillattendance',
            type: 'GET',
            success: function (response) {
                // Clear the existing content in the main section
                $('main').empty();
                $('main').html(response);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    function AddStudentForm() {
        $.ajax({
            url: '/teacher/add_student',
            type: 'GET',
            success: function (response) {
                // Clear the existing content in the main section
                $('main').empty();
                $('main').html(response);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    function SeeAttendance() {
        event.preventDefault();
        $.ajax({
            url: '/teacher/seeAttendance',
            type: 'GET',
            success: function (response) {
                // Clear the existing content in the main section
                $('main').empty();
                $('main').html(response);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    function getAttendanceForm() {
        $.ajax({
            url: '/teacher/attendance',
            type: 'GET',
            success: function (response) {
                // Clear the existing content in the main section
                $('main').empty();
                $('main').html(response);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    $('#addstudent-form').submit(function (event) {
        // Prevent the form from submitting normally
        event.preventDefault();

        // Get the form data
        const formData = $(this).serialize();

        // Send the form data using AJAX
        $.ajax({
            url: '/teacher/add_student',
            type: 'POST',
            data: formData,
            success: function (response) {
                console.log(response);
            }
        });
    });

    $('#attendance-form').submit(function (event) {
        // Prevent the form from submitting normally
        event.preventDefault();

        // Get the form data
        const formData = $(this).serialize();

        // Send the form data using AJAX
        $.ajax({
            url: '/admin/attendance',
            type: 'POST',
            data: formData,
            success: function (response) {
                // Create h3 element with the total number of students and add margin-top
                const totalStudentsH3 = $('<h3>Total Students: ' + response.rowCount + '</h3>').css('margin-top', '10px');

                // Append the h3 tag to the attendance-sheet div
                $('#attendance-sheet').empty().append(totalStudentsH3);

                // Create table element
                const table = $('<table class="table"></table>');
                table.css('max-width', $('main').width());

                // Create table headers
                const headers = ['Student Name', 'School', 'Date', 'Gender'];
                const headerRow = $('<tr></tr>');
                headers.forEach(header => {
                    headerRow.append('<th>' + header + '</th>');
                });
                table.append(headerRow);

                // Create table rows for each attendance record
                response.data.forEach(attendance => {
                    const row = $('<tr></tr>');
                    row.append('<td>' + attendance.studentName + '</td>');
                    row.append('<td>' + attendance.schoolName + '</td>');
                    row.append('<td>' + attendance.attendanceDate.split('T')[0] + '</td>');
                    row.append('<td>' + attendance.gender + '</td>');
                    table.append(row);
                });

                // Append the table to the attendance-sheet div
                $('#attendance-sheet').append(table);
            },
            error: function (error) {
                console.log(error);
            }
        });

        $(document).ready(function () {
            // Use document.ready to ensure the DOM is fully loaded before executing the script

            $('#fillAttendance_container').submit(function (event) {
                event.preventDefault();
                const formData = $(this).serialize();

                $.ajax({
                    url: '/teacher/fillattendance',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        console.log(response);
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            });
        });
    });
</script>